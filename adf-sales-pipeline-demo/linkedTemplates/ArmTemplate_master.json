{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-sales-pipeline-demo"
		},
		"LS_BlobStorage_Sales_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'LS_BlobStorage_Sales'"
		},
		"LS_HTTP_ProductAPI_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.example.com"
		},
		"TR_OnNewFile_Sales_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/e77665b4-c838-487e-a3f0-a8a69fac74a7/resourceGroups/rg-adf-sales-project/providers/Microsoft.Storage/storageAccounts/stgsalesdemovb"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-sales-pipeline-demo_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_BlobStorage_Sales_connectionString": {
						"value": "[parameters('LS_BlobStorage_Sales_connectionString')]"
					},
					"LS_HTTP_ProductAPI_properties_typeProperties_url": {
						"value": "[parameters('LS_HTTP_ProductAPI_properties_typeProperties_url')]"
					},
					"TR_OnNewFile_Sales_properties_typeProperties_scope": {
						"value": "[parameters('TR_OnNewFile_Sales_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}